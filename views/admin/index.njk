{% extends 'layout.njk' %}

{% block main %}
    <p><strong>This section is for instance owners only.</strong></p>

    <div class="row">
        <div class="col-md-8">
            <h4>Sign up</h4>

            <p>
                If you manage a Mastodon instance and want to customize how it appears on this website, sign up here.
            </p>

            <form action="/admin/sign_up" method="post">
                <div class="form-group">
                    <label for="sign_up-inputName">Instance name</label>
                    <input type="text" class="form-control" name="instance" id="sign_up-inputName" placeholder="mymastodoninstance.social">
                </div>

                <button type="submit" class="btn btn-primary">Sign up</button>
            </form>
        </div>

        <div class="col-md-4">
            <h4>Sign in</h4>

            <form action="/admin/login" method="post">
                <div class="form-group">
                    <label for="signin-inputName">Instance name</label>
                    <input type="text" class="form-control" name="instance" id="signin-inputName">
                </div>

                <div class="form-group">
                    <label for="signin-inputPassword">Password</label>
                    <input type="password" class="form-control" name="password" id="signin-inputPassword">
                </div>

                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
    </div>
{% endblock %}
